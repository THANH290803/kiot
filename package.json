{
  "name": "kiot-monorepo",
  "version": "1.0.0",
  "description": "Kiot - Point of Sale System Monorepo",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "concurrently \"npm start --workspace=backend\" \"npm start --workspace=frontend\"",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "clean": "rm -rf backend/node_modules frontend/node_modules node_modules",
    "migrate": "npm run migrate --workspace=backend",
    "seed": "npm run seed --workspace=backend"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "keywords": [
    "monorepo",
    "pos",
    "point-of-sale",
    "nextjs",
    "nodejs",
    "typescript"
  ],
  "author": "Kiot Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "next": "^16.1.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
